{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container p-4">
    <form method="post" action="{{ path('app_register') }}" enctype="multipart/form-data">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Register</h1>

        <div class="form-group">
            <label for="email">Email address:</label>
            <input type="email" class="form-control" name="email" placeholder="Enter email">
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" name="password" placeholder="Password">
        </div>

        <div class="form-group">
            <label for="password-repeat">Repeat password:</label>
            <input type="password" class="form-control" name="password-repeat" placeholder="Repeat your password">
        </div>

        <div class="form-group">
            <label for="nickname">Nickname:</label>
            <input type="text" class="form-control" name="nickname" placeholder="Your nickname">
        </div>

        <button class="btn btn-primary mt-2" type="submit">Sign in</button>
    </form>
</div>
{% endblock %}
